@{
    ViewData["Title"] = "Home Page";
}
    <div id="app" class="getStarted">
        <div id="rs-logo-header">
            <img src="~/images/ridestyler-snap.png" id="rs-logo" />
        </div>
        <div id="mediaWrapper">
            <div id="vehicleWrapper"></div>
        </div>
        <div id="loader"><img id="loader-gif" src="http://static.ridestyler.net/images/loaders/loader_radial_chaser_back_on_white_32.gif"></div>
        <div id="controlsWrapper">
            <div id="uploadDescription"></div>
            <input type="file" name="uploadInput" id="uploadInput">
            <label for="cameraInput" id="cameraLabel"><i class="fas fa-camera"></i></label>
            <label for="uploadInput" id="uploadLabel"><i class="fas fa-images"></i></label>
            <input type="file" accept="image/*" capture="camera" name="cameraInput" id="cameraInput">
            <div id="confirm"><span>Please confirm the wheel locations were accurately located.</span><div class="controls"><button id="confirmButton"><i class="fas fa-check"></i></button><button id="retryButton"><i class="fas fa-sync-alt"></i></button></div></div>
        </div>
        <div id="completeWrapper">
            <div id="completeCheck"><i class="fas fa-check"></i></div>
            <div id="completeMessage">Image has been uploaded to RideStyler.</div>
        </div>
        <div id="errorWrapper">
            <div id="errorEx"><i class="fas fa-times"></i></div>
            <div id="errorMessage"></div>
            <button id="tryAgain">Try Again</button>
        </div>
    </div>


